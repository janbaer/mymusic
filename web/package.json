{
  "name": "MyMusic",
  "version": "1.0.0",
  "description": "The web ui for my music library",
  "main": "index.html",
  "author": "Jan Baer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "parcel --port=8080 ./src/index.html",
    "build": "mkdir -p ./dist && rm -rf ./dist/*.* && parcel build ./src/index.html --detailed-report",
    "serve": "live-server --port=8081 --no-browser ./dist",
    "lint": "eslint ./src",
    "pre-commit": "lint-staged",
    "pre-push": "yarn lint"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "babel": {
    "presets": [
      "env",
      "preact"
    ],
    "plugins": [
      "inline-react-svg",
      "transform-object-rest-spread",
      [
        "module-resolver",
        {
          "root": [
            "."
          ],
          "alias": {
            "react": "preact-compat",
            "react-dom": "preact-compat"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-preact"
    ],
    "plugins": [
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "ignore",
          "objects": "ignore"
        }
      ]
    },
    "globals": {
      "fetch": false
    }
  },
  "eslintIgnore": [
    "dist/*"
  ],
  "lint-staged": {
    "*.js*": [
      "eslint",
      "git add"
    ]
  },
  "dependencies": {
    "classnames": "2.2.6",
    "preact": "8.3.0",
    "preact-compat": "3.18.2"
  },
  "devDependencies": {
    "babel-eslint": "8.2.6",
    "babel-plugin-inline-react-svg": "0.5.4",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-preact": "1.1.0",
    "bulma": "0.7.1",
    "eslint-config-standard": "11.0.0",
    "eslint-config-standard-jsx": "5.0.0",
    "eslint-config-standard-preact": "1.1.6",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "7.0.1",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-standard": "3.1.0",
    "husky": "0.14.3",
    "less": "3.8.1",
    "lint-staged": "7.2.2",
    "parcel-bundler": "1.9.7"
  }
}
